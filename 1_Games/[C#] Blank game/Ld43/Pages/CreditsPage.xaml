<Page x:Class="Ld43.Pages.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ld43.Pages"
      mc:Ignorable="d"  

      Style="{StaticResource BasePage}"
	  >

	<DockPanel LastChildFill="True">
		<DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
			<Button DockPanel.Dock="Right" Width="100" Content="{DynamicResource buttonBack}" Click="Back_Click"/>
		</DockPanel>

		<DockPanel LastChildFill="False">
			<Label FontSize="20" HorizontalAlignment="Center" DockPanel.Dock="Top" Content="{DynamicResource creditsCredits}"/>
			<StackPanel DockPanel.Dock="Left">
				<Label Content="{DynamicResource creditsArtistTitle}"/>
				<Label Content="{DynamicResource creditsProgrammerTitle}"/>
			</StackPanel>
			<StackPanel DockPanel.Dock="Left">
				<Label Content="{DynamicResource creditsArtist}"/>
				<Label Content="{DynamicResource creditsProgrammer}"/>
			</StackPanel>
		</DockPanel>
	</DockPanel>
</Page>