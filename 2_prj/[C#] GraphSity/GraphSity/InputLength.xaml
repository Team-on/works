<Window x:Class="GraphSity.InputLength"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphSity"
        mc:Ignorable="d"
        Title="InputLength" Height="103.846" Width="199.451"
		ResizeMode="NoResize" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Comic Sans MS" FontWeight="Bold"
		>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid VerticalAlignment="Center" Height="25">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="3*"/>
			</Grid.ColumnDefinitions>
			<Label Content="Length: "/>
			<TextBox x:Name="textBox" GotFocus="textBox_GotFocus" KeyDown="textBox_KeyDown"  Text="Введіть довжину дуги" Grid.Column="1"/>
		</Grid>
		<Button Click="Button_Click" Content="Ok" Grid.Row="1" VerticalAlignment="Center" Height="25"/>
	</Grid>
</Window>
